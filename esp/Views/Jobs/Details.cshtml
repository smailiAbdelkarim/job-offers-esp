@model esp.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="titres">Details</h2>
<p>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
</p>

<div>
    
    <dl class="dl-horizontal" style="width:500px;margin-top:25px">
        <dt style="margin-top:20px">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd style="margin-top:20px">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt style="margin-top:20px">
            @Html.DisplayNameFor(model => model.JobName)
        </dt>

        <dd style="margin-top:20px">
            @Html.DisplayFor(model => model.JobName)
        </dd>

        <dt style="margin-top:20px">
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>

        <dd style="margin-top:20px">
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobDescription).ToString()))
           
        </dd>

        <dt style="margin-top:20px">
            @Html.DisplayNameFor(model => model.JobPlace)
        </dt>

        <dd style="margin-top:20px">
            @Html.DisplayFor(model => model.JobPlace)
        </dd>

        <dt style="margin-top:20px">
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd style="margin-top:20px">
           <img src="~/Uploads/@Html.DisplayFor(model=>model.JobImage)" class="thumbnail"
                style="width:48px;height:48px"/>
        </dd>

    </dl>
</div>
<p>

    @Html.ActionLink("Back to List", "Index")|
