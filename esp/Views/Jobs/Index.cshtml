@model IEnumerable<esp.Models.Job>

@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2 class="titres">Jobs</h2>
@Html.ActionLink("Add job", "Create", "Jobs", null, new { @class = "btn btn-primary btn-md" })

<div class="container">
    <table style="margin-top:15px ;width:90%;" class="table table-striped table-bordered table-hover"
           id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobPlace)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobImage)
                </th>
                <th></th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobPlace)
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)"
                         class="thumbnail"
                         style="width:80px;height:80px" />
                </td>
                <td style="width:250px">


                    <input id="edit" type="button" title="Edit" value="Edit" class="btn btn-success btn-md"
                           onclick="location.href='@Url.Action(
              actionName: "Edit",controllerName: "Jobs", routeValues:new { id = item.Id })'"
                            />
                    |

                    <input id="details" type="button" title="Details" value="Details" class="btn btn-primary btn-md"
                           onclick="location.href='@Url.Action(
              actionName: "Details",controllerName: "Jobs", routeValues:new { id = item.Id })'"
                           data-toggle="modal" data-target="" /> |


                    <input id="delete" type="button" title="Delete" value="Delete" class="btn btn-danger btn-md"
                           onclick="location.href='@Url.Action(
              actionName: "Delete",controllerName: "Jobs", routeValues:new { id = item.Id })'"
                           data-toggle="modal" data-target="" />










                </td>
            </tr>
        }

    </table>
 

</div>