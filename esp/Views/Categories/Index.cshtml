@model IEnumerable<esp.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="titres">Categories</h2>
@Html.ActionLink("Add category", "Create", "Categories", null, new { @class = "btn btn-primary btn-md" })



<table style="margin-top:15px" class="table table-striped table-bordered table-hover"
       id="myTable">
    <tr>
        <th  >
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        <td style="width:250px">
            @Html.ActionLink("Edit", "Edit", "Categories", new { id = item.Id }, new { @class = "btn btn-success btn-md" }) | 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-md" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-md" })
        </td>
    </tr>
}

</table>

