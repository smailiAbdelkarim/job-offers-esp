@model IEnumerable<esp.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Welcome visitor</h2>
    <p style="font-size:20px">Welcome to our site .. If you are looking for work then you are in the right place .. either if you want to publish a work you are always in the right place</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@foreach (var item in Model)

{
    <div class="panel panel-default" style="padding:15px;">
        <h1 class="panel panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
        <div class="row">
            @foreach (var subItem in item.Jobs)
            {
                <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:380px">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobName)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobDescription)</h5>
                    <button class="btn btn-primary">Details </button>

                </div>


            }
        </div>
    </div>
}

