@model IEnumerable<esp.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <div class="panel panel-default" style="padding:15px;">
        <h1 class="panel panel-heading">Search Results</h1>
    
        <div class="row">
            @foreach (var subItem in Model)
            {
                <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:380px">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobName)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobDescription)</h5>
                    @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary btn-md" })


                </div>


            }
        </div>
    </div>

