@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="titres">Roles</h2>
@Html.ActionLink("Add new role", "Create", "Roles", null, new { @class = "btn btn-primary btn-md" })


<table table style="margin-top:15px" class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="width:250px">

            @Html.ActionLink("Edit", "Edit", "Roles", new { id = item.Id }, new { @class = "btn btn-success btn-md" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-md" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-md" })


    </tr>
}

</table>
